{
    "openapi": "3.1.0",
    "info": {
        "title": "Notes",
        "summary": "Permet de d'avoir accès a ses notes.",
        "description": "Les notes d'un utilisateur.",
        "contact": {
            "name": "assistance",
            "url": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
        }
    },
    "version": "1.0.0",
    "servers": [
        {
            "url": "https://two243134-patate1.onrender.com/api/",
            "description": "url"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "description": "Permet de créer un utilisateur",
                "summary": "Retourne la cle d'api créé",
                "tags": [
                    "Users"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "nom",
                                    "prenom",
                                    "courriel",
                                    "mot_de_passe"
                                ],
                                "properties": {
                                    "nom": {
                                        "type": "string"
                                    },
                                    "prenom": {
                                        "type": "string"
                                    },
                                    "courriel": {
                                        "type": "courriel"
                                    },
                                    "mot_de_passe": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "nom": "Laliberté",
                                "prenom": "Thomas",
                                "courriel": "thomas.laliberte@icloud.com",
                                "mot_de_passe": "1234"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Un message de réussite et la nouvelle cle d'api",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "L'utilisateur Thomas Laliberte a été ajouté avec succès"
                                        },
                                        "cle_api": {
                                            "type": "string",
                                            "example": "cle_api 8a01ef9b-9b7d-42c8-9c1a-405087c5b0da"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "message informant que les informations entrées sont mauvaises",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "le courriel est deja utilisé"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "message informant une erreur de serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "echec lors de la vérification du courriel"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/cle": {
            "post": {
                "description": "Permet de changer la cle d'api d'un utilisateur",
                "summary": "Retourne la cle d'api créé",
                "tags": [
                    "Users"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "courriel",
                                    "mot_de_passe"
                                ],
                                "properties": {
                                    "courriel": {
                                        "type": "courriel"
                                    },
                                    "mot_de_passe": {
                                        "type": "string"
                                    }
                                }
                            },
                            "example": {
                                "courriel": "thomas.laliberte@icloud.com",
                                "mot_de_passe": "1234"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "La nouvelle cle d'api",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "cle_api": {
                                            "type": "string",
                                            "example": "cle_api 8a01ef9b-9b7d-42c8-9c1a-405087c5b0da"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "message informant que les informations entrées sont mauvaises",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "champs manquant"
                                        },
                                        "champ_manquant": {
                                            "type": "array",
                                            "items":{
                                                "type": "string"
                                            },
                                            "example":["mot_de_passe"]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "message informant une erreur de serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "echec lors de la vérification du compte"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}